@model Student

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Student</h2>
            <hr />
        </div>


        @*
        None = "Key" does not display the "ErrorMessage" you provided

        ModelOnly = "Key" shows the "ErrorMessage" you provided.
        But above does not throw ModelValidation error for each model

        All = Shows all errors everywhere (above and below Model)
        *@
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Course" class="p-0"></label>
            <input asp-for="Course" type="text" class="form-control" />
            <span asp-validation-for="Course" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Student" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>

    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}